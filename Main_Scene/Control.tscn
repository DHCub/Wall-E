text = "// try pressing draw!

import \"stdlib/mediatrix.geo\";
import \"stdlib/getLast.geo\";

_drawPoly(poly) = let
	a, b, r1 = poly;
	draw segment(a, b);
	in
		if !r1 then 1 else let
		_, r = poly;
		_drawPoly(r);
		in 1;

drawPoly(poly) = let 
	_drawPoly(poly);
	a, _ = poly;
	draw segment(a, getLast(poly));
	in 1;

normalize(p1) = let
	m = measure(point(0, 0), p1);
	in p1/m;

fib(n) = let
	_f(a, b, n) = if n <= 1 then b else let
		c1 = a + b;
		in
		_f(b, c1, n - 1)
	;
	in _f(1, 1, n);

leftRight(a, b) = let
	c1 = a + 2*(b - a);
	l1 = mediatrix(a, c1);
	i1, i2, _ = intersect(l1, circle(b, measure(a, b)));
	in
	{i1, i2};
	
mtcm(n, a, b, c) = if n == 2 then 1 else let
	_mtcm(og, n, prevA, b, c) = if n == 0 then 1 else let
		v = normalize(b - c)*fib(og - n + 1);
		up = c + v;
		i1, i2, _ = leftRight(c, up);
		m1 = measure(i1, prevA);
		m2 = measure(i2, prevA);
		q = if (m1 > m2) then i1 else i2;
		draw segment(c, up);
		draw segment(c, q);
		draw segment(q, up);
		in
		_mtcm(og, n - 1, c, up, q)
	;
	in _mtcm(n, n - 1, a, b, c);
	
color blue;
a = point(0, -1);
b = point(1, -1);
c1 = a + 2*(b - a);
l1 = mediatrix(a, c1);
_, c, _ =  intersect(l1, circle(b, measure(a, b)));
drawPoly({a, b, c});

mtcm(4, a, b, c);"
